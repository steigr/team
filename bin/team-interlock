#!/bin/sh

. $TEAM_LIB/team.lib
. $TEAM_LIB/coreos.lib
. $TEAM_LIB/interlock.lib

arg=$1
shift

case "$arg" in
  install)
    interlock_write_unit $(coreos_unit interlock)
  ;;
  update)
    $TEAM interlock stop
    $TEAM interlock install
    $TEAM interlock start
  ;;
  start)
    coreos_start interlock.service
  ;;
  stop)
    coreos_stop interlock.service
  ;;
  environment)
    interlock_write_environment
  ;;
esac
