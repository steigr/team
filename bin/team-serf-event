#!/bin/sh

set -x

. $TEAM_LIB/team.lib
. $TEAM_LIB/serf-event.lib

serf_event_handlers | while read handler; do
  echo "Running $handler" >2
  SERF_EVENT_ENVIRONMENT=$(serf_event_environment)
  cmd="TEAM=\"$TEAM\"; TEAM_LIB=\"$TEAM_LIB\"; $SERF_EVENT_ENVIRONMENT $handler $*"
  /bin/bash -c "$cmd"
done