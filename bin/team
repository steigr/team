#!/bin/bash

set -x

PROJECT_REPO=https://github.com/steigr/team

make_prefix() { mkdir "$(dirname $1)" 2>/dev/null; echo "$1"; }
prefix()      { make_prefix "${PREFIX:-/opt/lib/team}"; }
has_git()     { test -d $(prefix)/.git; }
git_update()  { (cd $(prefix); git reset -q --hard; git pull -q origin master); }
git_clone()   { (git clone -q "$PROJECT_REPO" $(prefix) ); }
team_script() { echo "$(prefix)/bin/team"; }
abs_called()  { test "x$0" = "x$(team_script)"; }
abs_call()    { $(team_script); }
module()      { echo "$(team_script)-${1:-serf-event}"; }
has_module()  { test -x "$1"; }
team_lib()    { echo "$(prefix)/lib"; }
opt_script()  { echo "/opt/bin/team"; }
is_linked()   { test -L $(opt_script); }

has_git    || git_clone
is_linked  || ( rm $(opt_script); ln -s $(team_script) $(opt_script); )
abs_called || git_update
abs_called || ( abs_call $*; exit $?; )

cmd=$(module $*); shift
has_module $cmd || exit 1
TEAM_LIB=$(team_lib) $cmd $*; exit $?