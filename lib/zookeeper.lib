require team
require coreos
require docker
require serf

zookeeper_update() {
  zookeeper_stop
  zookeeper_install
}

zookeeper_install() {
  _zookeeper_write_unit $(coreos_unit zookeeper)
  zookeeper_start
}

zookeeper_start() {
  coreos_start zookeeper
}

zookeeper_stop() {
  coreos_stop zookeeper
}

zookeeper_id() {
  _coreos_active docker || exit 0
  _docker_ids_by_image "steigr/zookeeper" | head -1
}

zookeeper_ip() {
  serf_query zookeeper-ip | _serf_query_filter $(_zookeeper_ip_var) | head -n1
}

zookeeper_local-ip() {
  echo "$(_zookeeper_ip_var)$(_docker_ip $(zookeeper_id))"
}

zookeeper_config() {
  cfg=${1:-/run/zookeeper/config}
  mkdir -p $(dirname $cfg)
  cat <<EO_ZOOKEEPER_CONFIG | tee $cfg >/dev/null
tickTime=2000
initLimit=10
syncLimit=5
dataDir=$(_zookeeper_data_dir)
clientPort=2181
maxClientCnxns=$(_zookeeper_client_connections)
EO_ZOOKEEPER_CONFIG
}

_zookeeper_write_unit() {
  _coreos_write_unit $1 <<EO_ZOOKEEPER_UNIT
[Unit]
Description=Apache Zookeeper Distributed Key-Value-Store
[Service]
ExecStartPre=$(_team) zookeeper config $(_zookeeper_config_file)
ExecStartPre=$(_docker) pull $(_zookeeper_image)
ExecStart=$(_docker) run --rm -v $(_zookeeper_config_file):/app/conf/zoo.cfg -v $(_zookeeper_data_dir):$(_zookeeper_data_dir) $(_zookeeper_image)
EO_ZOOKEEPER_UNIT
}

_zookeeper_config_file() {
  echo "/run/zookeeper/config"
}

_zookeeper_data_dir() {
  echo "/var/lib/zookeeper"
}

_zookeeper_client_connections() {
  echo "256"
}

_zookeeper_image() {
  echo "steigr/zookeeper"
}

_zookeeper_ip_var() {
  echo "ZK_SERVER="
}