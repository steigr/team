
serf_event_handlers() {
  find /opt/lib/team/lib/../handlers -type f -name '*.handler' | sort
}

serf_event_register_handler() {
  $SERF_HANDLERS="$1;$2;$3"
}

serf_event_environment() {
 echo $(export | sed -e 's:^export ::g' -e 's:^declare -x ::g' | grep '^SERF_' )
}

serf_event_is() {
  set -x
  TEST_EVENT_user=SERF_USER_EVENT
  TEST_EVENT_query=SERF_QUERY_NAME
  test "x$SERF_EVENT" = "x$1" -a "x${TEST_EVENT_!1}" = "x$2" && true || false
}