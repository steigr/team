require team
require coreos
require config

ssh_update() {
  ssh_stop
  _ssh_cleanup_port_22
  ssh_install
}

ssh_install() {
  _ssh_write_unit
  ssh_start
}

ssh_stop() {
  _coreos_stop sshd
}

ssh_start() {
  _coreos_start sshd
}

ssh_reload() {
  ssh_stop
  ssh_start
}

ssh_port() {
  _defaults ssh-port
}

ssh_clean() {
  _coreos_remove_unit $(_coreos_unit socket sshd)
}

_ssh_write_unit() {
  _coreos_write_unit $(coreos_unit socket sshd) <<EO_SSH_SOCKET_UNIT
[Socket]
ListenStream=$(ssh_port)
Accept=yes
EO_SSH_SOCKET_UNIT
}

_ssh_cleanup_port_22() {
  kill $(lsof -i :22 -Fp | cut -b2-) 2>/dev/null
}